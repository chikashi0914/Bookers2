
<div class = "container px-5 px-sm-0">
<div class = "row">
<div class = "col-md-3">
<%= render 'users/user' ,user: @user %>
<%= render 'books/newbook' , book: @book %>
</div>

<div class = "col-md-8 offset-md-1">
  <p class = "notice"><%= flash[:notice] %></p>
  <h2>Books</h2>
  <table class = "table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan= "3"></th>
      </tr>
    </thead>
    <tbody>
       <% @books.each do |books| %>
       <tr>
       <td><%= link_to user_path(@user) do %><%= attachment_image_tag @users,:profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.jpg" %><% end %></td>
       <td><%= link_to books.title, book_path(books.id) %></td>
       <td><%= books.body %></td>
       </tr>
       <% end %>
    <tbody>
  </table>
</div>
</div>
</div>