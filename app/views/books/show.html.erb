<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @book.user %>
      <%= render 'books/newbook', book: Book.new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <p class = "notice"><%= flash[:notice] %></p>
      <h2>Book detail</h2>
      <table class = "table">
        <tr>
          <td>
            <%= link_to user_path(@book.user.id) do %>
              <%= attachment_image_tag @book.user, :profile_image, fallback: "no-image.jpg", size: "50×50" %>
              <br><%= @book.user.name %>
            <% end %>
          </td>
          <td>
            <%= @book.title %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit' , edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', book_path(@book) , method: :delete, class: "btn btn-sm btn-danger",data: {confirm: "本当に消しますか？"} %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>